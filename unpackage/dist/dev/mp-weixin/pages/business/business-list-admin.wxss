.container {
  margin-top: -1px;
  padding-bottom: 100rpx;
}
.container .header {
  padding-top: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  background: #3f4140;
}
.container .header .ing, .container .header .ed {
  padding: 0 50rpx;
  color: #b7b7b7;
  text-align: center;
}
.container .header .ing .num, .container .header .ed .num {
  font-size: 44rpx;
  font-weight: 700;
}
.container .header .ing .text, .container .header .ed .text {
  padding-bottom: 20rpx;
  font-size: 32rpx;
  color: #b7b7b7;
  font-weight: 700;
}
.container .header .ing .bottom-bar, .container .header .ed .bottom-bar {
  margin: 0 auto;
  width: 80%;
  border-bottom: 15rpx solid #3f4140;
}
.container .header .active .text, .container .header .active .num {
  color: #FFFFFF;
}
.container .header .active .bottom-bar {
  margin: 0 auto;
  width: 80%;
  border-bottom: 15rpx solid #f59250;
}
.container .content {
  position: relative;
}
.container .content::after {
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  border-bottom: 2rpx solid #eeeeee;
  content: ' ';
}
.container .content .item {
  padding: 30rpx 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.container .content .item .left .order {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
}
.container .content .item .left .order .icon {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  width: 100rpx;
  height: 100rpx;
}
.container .content .item .left .order .icon image {
  width: 100%;
}
.container .content .item .left .order .info {
  padding-left: 20rpx;
}
.container .content .item .left .order .info .id {
  font-size: 32rpx;
  font-weight: 700;
  color: #000000;
}
.container .content .item .left .order .info .status {
  padding: 20rpx 0;
}
.container .content .item .left .order .info .status .lab {
  display: inline-block;
  padding: 6rpx 20rpx;
  height: 30rpx;
  line-height: 30rpx;
  background: #ff4646;
  color: #FFFFFF;
  border-radius: 25rpx;
  font-size: 24rpx;
}
.container .content .item .left .order .info .status .aa {
  padding-left: 20rpx;
  font-size: 30rpx;
  color: #000000;
}
.container .content .item .left .order .info .status .text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.container .content .item .left .order .info .date {
  font-size: 24rpx;
  color: #5d5e5d;
}
.container .content .item .right {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  width: 10rpx;
  height: 10rpx;
}
.container .content .item .right image {
  width: 100%;
}
.submit {
  position: fixed;
  bottom: 0;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  text-align: center;
  vertical-align: middle;
  background: #f27721;
  color: #FFFFFF;
}

