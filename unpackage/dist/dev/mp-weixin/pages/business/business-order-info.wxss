.item-wrap {
  position: relative;
  background: #FFFFFF;
}
.item-wrap::after {
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  border-bottom: 2rpx solid #eeeeee;
  content: ' ';
}
.item-wrap .item {
  padding: 40rpx 40rpx;
