.header {
  padding-left: 40rpx;
  position: relative;
  width: 750rpx;
  overflow: hidden;
  background: #3f4140;
}
.header .header-bg {
  position: absolute;
  right: 40rpx;
  bottom: -90rpx;
  width: 190rpx;
}
.header .header-bg image {
  width: 100%;
}
.header .id {
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
}
.header .company {
  padding-bottom: 10rpx;
  padding-top: 8rpx;
  font-size: 26rpx;
  color: #d7d7d7;
}
.header .status {
  padding-bottom: 20rpx;
  font-size: 26rpx;
  color: #d7d7d7;
}
.list {
  padding: 0 40rpx;
  padding-top: 50rpx;
  /* 取消最后一个div的左边框 并重新追加div一半大小的边框 */
  /* 给第一个div追加背景图片样式 绘制一半高度的边框 */
}
.list .item {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
}
.list .item .left {
  padding-right: 50rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  text-align: center;
}
.list .item .left .time {
  font-size: 28rpx;
  color: #aaaaaa;
}
.list .item .left .date {
  font-size: 24rpx;
  color: #aaaaaa;
}
.list .item .right {
  position: relative;
  padding-left: 50rpx;
  padding-bottom: 100rpx;
  border-left: solid 1rpx #c7c7c7;
  /* 追加步骤条的小圆点 */
}
.list .item .right .text {
  font-size: 24rpx;
  color: #5d5e5d;
}
.list .item .right::after {
  content: "";
  position: absolute;
  left: -8rpx;
  top: 30rpx;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background: #d7d7d7;
}
.list .item:last-child .right {
  border-left: none;
}
.list .item:last-child .right::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 1rpx;
  height: 40rpx;
  border-left: solid 1rpx #c7c7c7;
}
.list .item:last-child .right::after {
  left: -7rpx;
}
.list .item:nth-of-type(1) .right {
  border-left: none;
}
.list .item:nth-of-type(1) .right::after {
  top: 10rpx;
  left: -20rpx;
  width: 41rpx;
  height: 41rpx;
  border-radius: 50%;
  background: url(data:image/png;base64,) no-repeat, -webkit-gradient(linear, left bottom, left top, from(#e56e1e), color-stop(50%, #f28c47), to(#ffa76e));
  background: url(data:image/png;base64,) no-repeat, -webkit-linear-gradient(bottom, #e56e1e 0%, #f28c47 50%, #ffa76e 100%);
  background: url(data:image/png;base64,) no-repeat, linear-gradient(0deg, #e56e1e 0%, #f28c47 50%, #ffa76e 100%);
  background-position: center;
  background-size: 60%;
}
.list .item:nth-of-type(1) .right::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 1rpx;
  height: 120rpx;
  border-left: solid 1rpx #c7c7c7;
}

