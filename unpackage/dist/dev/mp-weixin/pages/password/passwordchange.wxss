.container {
  background-repeat: no-repeat;
  background-size: 80%;
  background-position: top right;
  margin-top: 200rpx;
}
.container .wrap {
  padding: 0 40rpx;
}
.container .title {
  font-size: 60rpx;
  letter-spacing: 4.5rpx;
  color: #2c2c2c;
}
.container .subtitle {
  padding: 10rpx 0;
  font-size: 30rpx;
  color: #a2a2a2;
}
.container .form {
  padding: 0 40rpx;
  padding-top: 10rpx;
}
.container .form .pwd {
  position: relative;
  padding: 40rpx 0;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.container .form .pwd::after {
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  border-bottom: 2rpx solid #eeeeee;
  content: ' ';
}
.container .form .pwd .eyes {
  position: absolute;
  right: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 30rpx;
  height: 100%;
}
.container .form .pwd .eyes image {
  width: 100%;
}
.container .form .pwd input::-ms-input-placeholder {
  font-size: 30rpx;
  color: #a2a2a2;
}
.container .submit {
  padding: 100rpx 60rpx;
}
.container .submit button {
  font-size: 32rpx;
  background: #f27721;
  color: #FFFFFF;
  letter-spacing: 20rpx;
}

