.container .message {
  position: absolute;
  left: 20rpx;
  top: 25px;
  width: 30px;
  height: 30px;
}
.container .message image {
  width: 100%;
}
.container .message-dot {
  position: relative;
  left: 30px;
  top: -33px;
  width: 10rpx;
  height: 10rpx;
  background: #f54244;
  border-radius: 50%;
}
.introduction {
  position: relative;
  padding: 0 40rpx;
  padding-top: 30px;
  width: 100%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  background: #f8f8f8;
}
.introduction .header {
  position: relative;
  height: 400rpx;
}
.introduction .header .color-block-wrap {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 999;
}
.introduction .header .color-block-wrap .color-block {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  z-index: 999;
  width: 400rpx;
  height: 400rpx;
  background: rgba(255, 105, 0, 0.8);
}
.introduction .header .color-block-wrap .color-block .cn, .introduction .header .color-block-wrap .color-block .en {
  display: block;
  padding-left: 30rpx;
  padding-bottom: 10rpx;
}
.introduction .header .color-block-wrap .color-block .cn {
  font-size: 60rpx;
  font-weight: 900;
  color: #FFFFFF;
}
.introduction .header .color-block-wrap .color-block .en {
  font-size: 20rpx;
  font-weight: 400;
  color: #FFFFFF;
}
.introduction .header .pic {
  position: absolute;
  right: 0;
  top: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  width: 400rpx;
  height: 400rpx;
}
.introduction .header .pic image {
  width: 100%;
}
.introduction .logo-wrap {
  position: relative;
}
.introduction .logo-wrap .bg {
  position: absolute;
  right: 0;
  bottom: 0;
  z-index: 1;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.introduction .logo-wrap .logo {
  padding: 20rpx 0;
  z-index: 2;
}
.introduction .logo-wrap .text {
  z-index: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  color: #a4a4a4;
  font-size: 28rpx;
  letter-spacing: 1px;
}
.introduction .logo-wrap .go {
  padding: 50rpx 0;
  z-index: 900;
  text-align: center;
}
.introduction .logo-wrap .go image {
  width: 40rpx;
  height: 40rpx;
}
.example {
  padding: 0 40rpx;
  padding-top: 40px;
}
.example .header .title {
  font-size: 54rpx;
  color: #000;
  font-weight: 700;
  letter-spacing: 1px;
}
.example .header .content {
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #a4a4a4;
  letter-spacing: 1px;
}
.example .header .other {
  padding: 20rpx 50rpx 20rpx 20rpx;
}
.example .header .other .time {
  font-size: 28rpx;
  color: #a4a4a4;
}
.example .header .other .more {
  float: right;
  padding: 5rpx 30rpx;
  font-size: 28rpx;
  color: #a4a4a4;
  border: 1rpx solid #e5e5e5;
  border-radius: 26rpx;
}
.goods {
  padding: 50rpx 40rpx;
}
.goods .top {
  height: 80rpx;
  line-height: 80rpx;
}
.goods .top .sub-title {
  -webkit-transition: all 0.4s ease;
  transition: all 0.4s ease;
  padding-right: 30rpx;
  font-size: 34rpx;
  color: #a4a4a4;
}
.goods .top .title {
  -webkit-transition: all 0.4s ease;
  transition: all 0.4s ease;
  font-size: 54rpx;
  font-weight: 700;
  color: #000;
}
.goods .pic image {
  width: 100%;
}
.goods .description .title {
  padding: 30rpx 0;
  font-size: 34rpx;
  font-weight: 700;
  color: #000;
}
.goods .description .content {
  font-size: 28rpx;
  color: #a4a4a4;
  letter-spacing: 1px;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
}
.goods .more {
  padding: 30rpx 0;
  padding-top: 80rpx;
  width: 100%;
  overflow: hidden;
}
.goods .more button {
  float: left;
  padding: 0 60rpx;
  border-radius: 150rpx;
  background: #f27721;
  color: #FFFFFF;
  font-size: 28rpx !important;
}
.terms .header {
  position: relative;
}
.terms .header .img {
  width: 100%;
}
.terms .header .img image {
  width: 100%;
}
.terms .header .left, .terms .header .right {
  position: absolute;
  top: 0;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.terms .header .left {
  left: 20rpx;
}
.terms .header .left .cn {
  padding-bottom: 20rpx;
  font-size: 54rpx;
  font-weight: 700;
  color: #FFFFFF;
}
.terms .header .left .en {
  font-size: 24rpx;
  color: #FFFFFF;
}
.terms .header .right {
  right: 20rpx;
}
.terms .header .right image {
  width: 50rpx;
  height: 50rpx;
}
.terms .list {
  position: relative;
  top: -40rpx;
  padding: 40rpx;
  border-radius: 40rpx;
  background: #FFFFFF;
}
.terms .list .item {
  padding-bottom: 30rpx;
}
.terms .list .item .pic image {
  width: 100%;
}
.terms .list .item .text {
  padding-top: 20rpx;
  font-size: 34rpx;
  font-weight: 700;
}

