/* 展示卡片通用样式 */
.swiper {
  height: 100%;
}
.uni-padding-wrap {
  position: relative;
  padding-bottom: 50px;
}
.uni-padding-wrap .status-point {
  position: absolute;
  bottom: 0;
  padding: 30px 40rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
}
.uni-padding-wrap .status-point .item {
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  margin-left: 10px;
  width: 10rpx;
  height: 10rpx;
  line-height: 20rpx;
  border-radius: 50%;
  background-color: #e5e5e5;
}
.uni-padding-wrap .status-point .active {
  background-color: #f27721;
  width: 12rpx;
  height: 12rpx;
}
.swiper-item .item-wrap {
  padding: 0 20rpx 20px 20rpx;
}
.swiper-item .item-wrap image {
  border-radius: 20rpx;
  width: 100%;
}
.swiper-item .item-wrap .text .title, .swiper-item .item-wrap .text .content {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
.swiper-item .item-wrap .text .title {
  margin: 20rpx 0;
  font-size: 34rpx;
  color: #000;
  font-weight: 700;
  -webkit-line-clamp: 2;
}
.swiper-item .item-wrap .text .content {
  font-size: 28rpx;
  color: #a4a4a4;
  -webkit-line-clamp: 1;
}

